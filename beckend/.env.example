# Database (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Redis Cache
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your_random_secret_key_generated_by_openssl_rand

# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# Logging
LOG_LEVEL=debug

# Features
ENABLE_AI_ANALYSIS=true
ANALYSIS_TIMEOUT=30000
BATCH_SIZE=100

# Analysis Scheduler
ANALYSIS_START_HOUR=23
ANALYSIS_END_HOUR=7

# Worker Pool
MAX_CONCURRENT_WORKERS=10
WORKER_POLL_INTERVAL_MS=5000

# Cache TTL (in seconds)
CACHE_TTL_MATCHES=86400
CACHE_TTL_RECOMMENDATIONS=86400
CACHE_TTL_PROFILES=43200
CACHE_TTL_CONVERSATIONS=604800

# Activity Tracking
HEARTBEAT_TIMEOUT_MS=30000
PHASE1_THRESHOLD_MS=600000
PHASE2_THRESHOLD_MS=1800000
PHASE3_THRESHOLD_MS=3600000
