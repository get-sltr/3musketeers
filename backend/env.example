# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Frontend URL (for CORS)
FRONTEND_URL=https://getsltr.com
DEV_FRONTEND_URL=http://localhost:3000

# Backend URL (for file uploads)
BACKEND_URL=https://your-railway-app.railway.app

# Server Port
PORT=3001

# Environment
NODE_ENV=production

# Internal API Key (Required for push notifications)
# Generate a secure random string: openssl rand -hex 32
# Must match the INTERNAL_API_KEY in the frontend deployment
INTERNAL_API_KEY=your-secure-internal-api-key

# Anthropic API Key (for EROS AI)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Redis (for Socket.io scaling)
REDIS_URL=redis://default:password@your-redis-host:6379
